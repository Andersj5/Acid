{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "new-cap": "off",
    "no-alert": "off",
    "no-template-curly-in-string": "off",
    "no-underscore-dangle": "off",
    "no-else-return": "off",
    "max-len": "off",
    "no-useless-escape": "off",
    "consistent-return": "off",
    "no-await-in-loop": "off",
    "no-plusplus": "off",
    "global-require": "off",
    "arrow-body-style": ["error", "always"],
    "no-param-reassign": ["error", { "props": false }],
    "one-var": "off",
    "spaced-comment": "off",
    "no-console": "off",
    "wrap-iife": ["error", "any"],
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "import/newline-after-import": "off",
    "comma-dangle": ["error", {
        "arrays": "never",
        "objects": "ignore",
        "imports": "ignore",
        "exports": "ignore",
        "functions": "ignore",
    }],
    "func-names": "off",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  },
  "globals": {
    "Ractive": true,
    "app": true,
    "cnsl": true,
    "exports": true,
    "module": true,
    "component": true,
    "request": true,
    "pipe": true,
    "push": true,
    "demand": true,
    "$": true,
    "import": true,
    "notify": true
  }
}
